<section class="standard-form">
  <div class="form-group">
    {{#each characteristics}}
    <div class="form-group stacked">
      <label>{{field.label}}</label>
      <div class="form-fields">
        {{formInput field value=value placeholder="0"}}
        <span class="advancement" data-tooltip="DRAW_STEEL.Actor.base.CharacteristicInput.Advancement">{{numberFormat advancements sign=true}}</span>
      </div>
    </div>
    {{/each}}
  </div>
</section>
