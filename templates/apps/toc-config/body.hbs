<section class="standard-form scrollable">
  {{#each entries}}
  <fieldset data-journal-id="{{document.id}}">
    <legend>
      {{document.name}}
      <button type="button" class="icon fa-solid fa-edit" data-action="manageSpecial" data-tooltip="DRAW_STEEL.COMPENDIUM.TOC.configure.append.label"></button>
    </legend>
    <div class="form-group">
      <label>{{localize "DRAW_STEEL.COMPENDIUM.TOC.FIELDS.entryType.label"}}</label>
      <div class="form-fields">
        <select name="{{concat document.id ".type"}}">
          {{selectOptions @root.entryTypes selected=type blank="DRAW_STEEL.COMPENDIUM.TOC.ENTRY_TYPES.hidden" localize=true}}
        </select>
      </div>
    </div>
    <div class="form-group">
      <div class="form-group slim">
        <label>{{localize "DRAW_STEEL.COMPENDIUM.TOC.FIELDS.showPages.label"}}</label>
        <div class="form-fields">
          <input type="checkbox" name="{{concat document.id ".showPages"}}" {{checked showPages}}>
        </div>
      </div>
      <div class="form-group slim">
        <label>{{localize "DRAW_STEEL.COMPENDIUM.TOC.FIELDS.order.label"}}</label>
        <div class="form-fields">
          <input type="number" name="{{concat document.id ".order"}}" value="{{order}}" step="1">
        </div>
      </div>
    </div>
    <div class="form-group">
      <label>{{localize "DRAW_STEEL.COMPENDIUM.TOC.FIELDS.title.label"}}</label>
      <div class="form-fields">
        <input type="text" name="{{concat document.id ".title"}}" value="{{title}}" placeholder="{{document.name}}">
      </div>
      <p class="hint">{{localize "DRAW_STEEL.COMPENDIUM.TOC.FIELDS.title.hint"}}</p>
    </div>
  </fieldset>
  {{/each}}
</section>
