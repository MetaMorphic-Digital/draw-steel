{{#if isPlay}}
<fieldset class="movement flexrow">
  <legend>{{systemFields.movement.label}}</legend>
  {{system.movement.value}} ({{movement.list}})
</fieldset>
{{else}}
<fieldset class="movement flexrow">
  <legend>{{systemFields.movement.label}}</legend>
  {{formGroup systemFields.movement.fields.value value=systemSource.movement.value rootId=actor.uuid dataset=datasets.isSource}}
  {{formGroup systemFields.movement.fields.types value=systemSource.movement.types rootId=actor.uuid dataset=datasets.isSource options=movement.options localize=true}}
  {{#if movement.flying}}
  {{formGroup systemFields.movement.fields.hover value=systemSource.movement.hover rootId=actor.uuid dataset=datasets.isSource}}
  {{/if}}
</fieldset>
{{/if}}
