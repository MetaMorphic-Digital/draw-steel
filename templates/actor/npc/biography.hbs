{{! Biography Tab }}
<section class="tab biography {{tab.cssClass}}" data-group="primary" data-tab="biography">
  <fieldset>
    <legend>{{systemFields.biography.fields.languages.label}}</legend>
    {{#if isPlay}}
    {{languages.list}}
    {{else}}
    {{formInput systemFields.biography.fields.languages value=systemSource.biography.languages disabled=(not editable) dataset=datasets.isSource options=languages.options}}
    {{/if}}
  </fieldset>
  <fieldset>
    <legend>{{systemFields.negotiation.label}}</legend>
    {{#if isPlay}}
    <div class="flexrow">
      {{formGroup systemFields.negotiation.fields.interest value=system.negotiation.interest classes="paired"}}
      {{formGroup systemFields.negotiation.fields.patience value=system.negotiation.patience classes="paired"}}
    </div>
    <p>
      <strong>{{systemFields.negotiation.fields.impression.label}}:</strong>
      {{system.negotiation.impression}}
    </p>
    <p>
      <strong>{{systemFields.negotiation.fields.motivations.label}}:</strong>
      {{motivations.currentMotivations}}
    </p>
    <p>
      <strong>{{systemFields.negotiation.fields.pitfalls.label}}:</strong>
      {{motivations.currentPitfalls}}
    </p>
    {{else}}
    {{formGroup systemFields.negotiation.fields.impression value=system.negotiation.impression}}
    {{formGroup systemFields.negotiation.fields.motivations value=system.negotiation.motivations options=motivations.list}}
    {{formGroup systemFields.negotiation.fields.pitfalls value=system.negotiation.pitfalls options=motivations.list}}
    {{/if}}
  </fieldset>
  {{#if editable}}
  {{formGroup
  systemFields.biography.fields.value
  enriched=enrichedBiography
  value=systemSource.biography.value
  documentUUID=actor.uuid
  collaborate=true
  toggled=isPlay
  height=200
  }}
  {{#if gm}}
  {{formGroup
  systemFields.biography.fields.gm
  enriched=enrichedGMNotes
  value=systemSource.biography.gm
  documentUUID=actor.uuid
  toggled=isPlay
  height=300
  }}
  {{/if}}
  {{else}}
  <fieldset>
    <legend>{{systemFields.biography.fields.value.label}}</legend>
    {{{enrichedBiography}}}
  </fieldset>
  {{#if gm}}
  <fieldset>
    <legend>{{systemFields.biography.fields.gm.label}}</legend>
    {{{enrichedGMNotes}}}
  </fieldset>
  {{/if}}
  {{/if}}
</section>
