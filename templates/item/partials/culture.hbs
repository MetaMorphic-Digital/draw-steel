{{#*inline "aspect" }}
<fieldset>
  <legend>{{field.label}}</legend>
  {{formGroup field.fields.aspect value=value.aspect options=aspectContext.aspectOptions}}
  {{formGroup field.fields.skillOptions value=value.skillOptions options=config.skills.optgroups}}
  {{#if item.isEmbedded}}
  {{formGroup field.fields.skill value=value.skill options=aspectContext.skillOptions blank=""}}
  {{/if}}
</fieldset>
{{/inline}}

{{formGroup systemFields.language value=system.language}}
{{> aspect field=systemFields.environment value=system.environment aspectContext=environment}}
{{> aspect field=systemFields.organization value=system.organization aspectContext=organization}}
{{> aspect field=systemFields.upbringing value=system.upbringing aspectContext=upbringing}}
