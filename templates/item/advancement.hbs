<section class="tab standard-form {{tab.cssClass}}" data-group="primary" data-tab="advancement" data-subtype="{{document.type}}">
  {{log this level="warn"}}

  {{#each advancements}}
  <h4 class="section-header">
    <span>{{section}}</span>
    <button type="button" data-action="createAdvancement" class="icon fa-fw fa-solid fa-circle-plus" {{disabled (not @root.editable)}}></button>
  </h4>

  {{#each documents as |adv|}}
  <div class="form-group" data-advancement-id="{{adv.id}}">
    {{adv.name}}
    <div class="form-fields">
      <button type="button" data-action="editAdvancement" class="icon fa-fw fa-solid fa-cog" {{disabled (not @root.editable)}}></button>
      <button type="button" data-action="deleteAdvancement" class="icon fa-solid fa-fw fa-trash" {{disabled (not @root.editable)}}></button>
    </div>
  </div>
  {{/each}}
  {{/each}}
</section>
