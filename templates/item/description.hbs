{{! Description Tab }}
<section class="tab {{tab.cssClass}} {{#unless isPlay}}prosemirror editor{{/unless}}" data-group="primary" data-tab="description">
  <div class="editor-content">
    <label class="html-description">
      {{systemFields.description.fields.value.label}}
      {{#unless isPlay}}
      <a class="label-action" data-action="editHTML" data-field-name="system.description.value">
        <i class="fa-solid fa-feather"></i>
      </a>
      {{/unless}}
    </label>
    <div class="description value play">
      {{{enrichedDescription}}}
    </div>
    {{#if gm}}
    <label class="html-description">
      {{systemFields.description.fields.gm.label}}
      {{#unless isPlay}}
      <a class="label-action" data-action="editHTML" data-field-name="system.description.gm">
        <i class="fa-solid fa-feather"></i>
      </a>
      {{/unless}}
    </label>
    <div class="description gm play">
      {{{enrichedGMNotes}}}
    </div>
    {{/if}}
  </div>
</section>
