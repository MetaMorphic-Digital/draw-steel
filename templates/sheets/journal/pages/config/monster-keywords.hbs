<section class="standard-form tab {{tabs.monsterKeywords.cssClass}}" data-tab="monsterKeywords" data-group="primary">
  <div class="form-group">
    <button type="button" data-action="addEntry" data-path="monsterKeywords">
      <i class="fa-solid fa-plus"></i>
      {{localize "DRAW_STEEL.JournalEntryPage.config.addEntry.monsterKeyword"}}
    </button>
  </div>
  <p class="hint">{{localize "DRAW_STEEL.JournalEntryPage.config.pageNameIsGroup"}}</p>
  <div class="scrollable">
    {{#each monsterKeywords}}
    <fieldset>
      <legend>
        <button type="button" data-action="removeEntry" data-path="monsterKeywords" data-index="{{@index}}">
          <i class="fa-solid fa-trash"></i>
          {{localize "DRAW_STEEL.JournalEntryPage.config.removeEntry.monsterKeyword"}}
        </button>
      </legend>
      {{#if warnDuplicateKey}}
      <div class="notification warning">{{localize "DRAW_STEEL.JournalEntryPage.config.duplicateEntry"}}</div>
      {{/if}}
      <div class="form-group">
        <div class="form-group" data-tooltip-text="{{fields.label.hint}}">
          <label>{{fields.label.label}}</label>
          <div class="form-fields">
            {{formInput fields.label value=values.label name=names.label}}
          </div>
        </div>
        <div class="form-group" data-tooltip-text="{{fields.key.hint}}">
          <label>{{fields.key.label}}</label>
          <div class="form-fields">
            {{formInput fields.key value=values.key name=names.key placeholder=keyPlaceholder}}
          </div>
        </div>
      </div>
      <div class="form-group" data-tooltip-text="{{fields.reference.hint}}">
        <label>{{fields.reference.label}}</label>
        <div class="form-fields">
          {{formInput fields.reference value=values.reference name=names.reference}}
        </div>
      </div>
    </fieldset>
    {{/each}}
  </div>
</section>
