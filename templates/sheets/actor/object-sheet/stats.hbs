{{! Stats Tab }}
<section class="tab stats standard-form {{tab.cssClass}}" data-group="primary" data-tab="stats">
  <fieldset class="resources flexrow">
    <legend>{{localize "DRAW_STEEL.SHEET.Resources"}}</legend>
    <div class="resource stamina">
      <label class="resource-label">
        {{systemFields.stamina.label}}
      </label>
      <div class="form-group resource-content">
        {{#if isPlay}}
        <div class="resource-temporary">
          {{formGroup
          systemFields.stamina.fields.temporary
          value=system.stamina.temporary
          dataset=datasets.notSource
          classes="paired"
          }}
        </div>
        <div class="resource-current">
          {{formGroup
          systemFields.stamina.fields.value
          value=system.stamina.value
          dataset=datasets.notSource
          classes="paired"
          }}
        </div>
        {{/if}}
        <span class="resource-max">
          {{#if isPlay}}
          <div class="form-group paired">
            <label class="input-placeholder-label">
              {{systemFields.stamina.fields.max.label}}
            </label>
            <div class="input-placeholder">
              {{system.stamina.maxLabel}}
            </div>
          </div>
          {{else}}
          <div class="form-group paired">
            {{formGroup systemFields.stamina.fields.max value=systemSource.stamina.max dataset=datasets.isSource classes="paired"}}
            {{formGroup systemFields.object.fields.squareStamina value=systemSource.object.squareStamina dataset=datasets.isSource classes="paired"}}
          </div>
          {{/if}}
        </span>
      </div>
    </div>
  </fieldset>
  {{#if isPlay}}
  <div class="form-group">
    <fieldset class="combat flexrow">
      <legend data-tooltip-html="{{combatTooltip}}">{{systemFields.combat.label}}</legend>
      <span class="play">
        <strong>{{systemFields.combat.fields.size.label}}</strong> {{system.combat.size}}
      </span>
      {{#if system.combat.size.typical}}
      <span class="play">
        <strong>{{systemFields.combat.fields.size.fields.typical.label}}</strong> {{system.combat.size.typical}}
      </span>
      {{/if}}
      {{#if system.combat.size.direction}}
      <span class="play">
        <strong>{{systemFields.combat.fields.size.fields.direction.label}}</strong> {{system.combat.size.direction}}
      </span>
      {{/if}}
      {{#if system.combat.stability}}
      <span class="play">
        <strong>{{systemFields.combat.fields.stability.label}}</strong> {{system.combat.stability}}
      </span>
      {{/if}}
    </fieldset>
    {{#if movement.show}}
    {{> "systems/draw-steel/templates/sheets/actor/shared/partials/stats/movement.hbs"}}
    {{/if}}
  </div>
  {{else}}
  <fieldset class="combat">
    <legend data-tooltip-html="{{combatTooltip}}">{{systemFields.combat.label}}</legend>
    <div class="size flexrow">
      <label class="size">{{systemFields.combat.fields.size.label}}</label>
      {{formInput systemFields.combat.fields.size.fields.value value=systemSource.combat.size.value rootId=document.uuid dataset=datasets.isSource}}
      {{#if (eq system.combat.size.value 1)}}
      {{formInput systemFields.combat.fields.size.fields.letter value=systemSource.combat.size.letter rootId=document.uuid dataset=datasets.isSource}}
      {{/if}}
    </div>
    {{formGroup systemFields.combat.fields.size.fields.text value=systemSource.combat.size.text placeholder=system.combat.size.textPlaceholder}}
    {{formGroup systemFields.combat.fields.size.fields.direction value=systemSource.combat.size.direction}}
    {{formGroup systemFields.combat.fields.size.fields.typical value=systemSource.combat.size.typical}}
  </fieldset>
  {{> "systems/draw-steel/templates/sheets/actor/shared/partials/stats/movement.hbs"}}
  {{/if}}
  {{> "systems/draw-steel/templates/sheets/actor/shared/partials/stats/immunities-weaknesses.hbs"}}
</section>
