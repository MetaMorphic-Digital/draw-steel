{{! Sheet Header }}
<header class="sheet-header">
  <img
    class="profile-img"
    src="{{document.img}}"
    alt="{{document.name}}"
    data-action="{{ifThen isPlay "showPortraitArtwork" "editImage"}}"
    data-edit="img"
    title="{{document.name}}"
  >
  <div class="header-center flexcol">
    <div class="document-name">
      {{#if isPlay}}
      <h2>{{document.name}}</h2>
      {{else}}
      {{formInput fields.name value=source.name placeholder=(localize "Name") }}
      {{/if}}
    </div>
    <div class="tags flexrow">
      {{!-- Category/Role Tags --}}
      {{#if system.object.categoryLabel}}
      <div class="tag">{{system.object.categoryLabel}}</div>
      {{/if}}
      {{#if system.object.roleLabel}}
      <div class="tag">{{system.object.roleLabel}}</div>
      {{/if}}
      {{#unless isPlay}}
      <a data-action="editObjectMetadata">
        <i class="fa-solid fa-gear"></i>
      </a>
      {{/unless}}
    </div>
  </div>
  <div class="header-right flexcol">
    <div class="actor-source">
      {{system.source.label}}
    </div>
    <dl>
      <dt class="level">{{systemFields.object.fields.level.label}}</dt>
      <dd class="level">{{systemSource.object.level}}</dd>

      <dt class="ev">{{localize "DRAW_STEEL.Actor.base.EVLabel.Label"}}</dt>
      <dd class="ev">{{system.evLabel}}</dd>
    </dl>
  </div>
</header>
