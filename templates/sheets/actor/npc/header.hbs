{{! Sheet Header }}
<header class="sheet-header" style="
  {{#if avatarProperties.objectFit}} --avatar-object-fit: {{avatarProperties.objectFit}}; {{/if}}
  {{#if avatarProperties.objectPosition}} --avatar-object-position: {{avatarProperties.objectPosition}}; {{/if}}
  ">
  <img
    class="profile-img"
    src="{{document.img}}"
    alt="{{document.name}}"
    data-action="{{ifThen isPlay "showPortraitArtwork" "editImage"}}"
    {{#unless isPlay}}data-edit="img"{{/unless}}
    title="{{document.name}}"
  >
  <div class="header-center flexcol">
    <div class="document-name">
      {{#if isPlay}}
      <h2>{{document.name}}</h2>
      {{else}}
      {{formInput fields.name value=source.name placeholder=(localize "Name") }}
      {{/if}}
    </div>
    <div class="tags flexrow">
      {{!-- Keyword Tags --}}
      {{#each monsterKeywords as |keyword|}}
      <div class="tag">{{keyword}}</div>
      {{/each}}
      {{!-- Organization/Role Tags --}}
      {{#if system.monster.organizationLabel}}
      <div class="tag">{{system.monster.organizationLabel}}</div>
      {{/if}}
      {{#if system.monster.roleLabel}}
      <div class="tag">{{system.monster.roleLabel}}</div>
      {{/if}}
      {{#unless isPlay}}
      <a data-action="editMonsterMetadata">
        <i class="fa-solid fa-gear"></i>
      </a>
      {{/unless}}
    </div>
  </div>
  <div class="header-right flexcol">
    <div class="actor-source">
      {{system.source.label}}
    </div>
    <dl>
      <dt class="level">{{systemFields.monster.fields.level.label}}</dt>
      <dd class="level">{{systemSource.monster.level}}</dd>

      <dt class="ev">{{localize "DRAW_STEEL.Actor.base.EVLabel.Label"}}</dt>
      <dd class="ev">{{system.evLabel}}</dd>
    </dl>
    {{#if showMalice}}
    <div class="malice">
      <label>{{malice.label}}</label>
      <input type="number" step="1" data-setting="malice" value="{{malice.value}}">
    </div>
    {{/if}}
  </div>
</header>
